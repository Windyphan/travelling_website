{
  "version": 2,
  "name": "travelling-website-backend",
  "builds": [
    {
      "src": "server.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/server.js"
    },
    {
      "src": "/(.*)",
      "dest": "/server.js"
    }
  ],
  "env": {
    "NODE_ENV": "production",
    "MONGODB_URI": "@mongodb_uri",
    "JWT_SECRET": "@jwt_secret",
    "STRIPE_SECRET_KEY": "@stripe_secret_key",
    "EMAIL_USER": "@email_user",
    "EMAIL_PASS": "@email_pass"
  },
  "functions": {
    "server.js": {
      "maxDuration": 30
    }
  }
}

